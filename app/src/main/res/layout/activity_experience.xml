<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/white"
    tools:context="com.example.cmpe295b.ExperienceActivity"
    android:nestedScrollingEnabled="true">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/abc_action_bar_default_height_material"
        android:nestedScrollingEnabled="false">

        <TextView
            android:id="@+id/totalExp"
            android:text=""
            android:background="#E8E8E8"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/abc_action_bar_default_height_material"
        android:nestedScrollingEnabled="true">
        <TextView
            android:id="@+id/joiningDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_span="1"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false">
        <TextView
            android:id="@+id/pastEmpHist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Past Employment History"
            android:gravity="center"
            android:background="#E8E8E8"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_span="2" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:nestedScrollingEnabled="false">
    <ListView
            android:id="@+id/list_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_tableRow4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:touchscreenBlocksFocus="false"
            android:background="@android:drawable/divider_horizontal_dim_dark">
    </ListView>
    </TableRow>
</TableLayout>