<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/employerNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:background="#E8E8E8"
        android:gravity="center"
        android:text=""
        android:textColor="#000000"
        android:textSize="16dp" />
    <View
        android:layout_height="2dp"
        android:layout_width="fill_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_below="@+id/employerNo"
        android:layout_marginTop="2dp"
        android:background="#E8E8E8" />
    <TextView
        android:id="@+id/employerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/employerNo"
        android:layout_marginLeft="2dp"
        android:textColor="#000000"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/empDesg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_below="@+id/employerName"
        android:textColor="#000000"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/empStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/empDesg"
        android:layout_marginLeft="2dp"
        android:textColor="#000000"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/empEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/empDesg"
        android:layout_toRightOf="@+id/empStartDate"
        android:layout_marginLeft="4dp"
        android:paddingBottom="2dp"
        android:textColor="#000000"
        android:textSize="16dp" />
</RelativeLayout>